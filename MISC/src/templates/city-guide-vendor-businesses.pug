      h1.h2.mb-sm-0 My business
      .d-flex.align-items-center.ms-sm-4
        label(for='sortby').fs-sm.me-2.pe-1.text-nowrap
          i.fi-arrows-sort.text-muted.mt-n1.me-2
          | Sort by:
        select(id='sortby').form-select.form-select-sm
          option Newest
          option Oldest
          option Popularity
          option High rating
          option Low rating

    .card.p-sm-4.border-0.shadow-sm
      .card-body
