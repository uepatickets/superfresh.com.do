          // Sidebar
          aside.col-lg-3.col-md-4.mb-lg-0.mb-4.pb-2.pe-xl-5
            ul.nav.flex-column.mb-4.pb-lg-3
              li.nav-item
                a(href='#').nav-link.py-1.px-0.fs-sm.fw-normal
                  i.fi-bed.mt-n1.me-2.fs-base.align-middle.opacity-70
                  | Accommodation
                  span.float-end.text-muted (4)
              li.nav-item
                a(href='#').nav-link.py-1.px-0.fs-sm.fw-normal
                  i.fi-cafe.mt-n1.me-2.fs-base.align-middle.opacity-70
                  | Food &amp; Drink
                  span.float-end.text-muted (1)
