                  li.me-2.mb-1.pe-1
                    i.fi-star-filled.mt-n1.me-1.text-warning.align-middle.opacity-70
                    b 4.9 
                    | (48)
                  li.me-2.mb-1.pe-1
                    i.fi-wallet.mt-n1.me-1.align-middle.opacity-70
                    | $$
                  li.me-2.mb-1.pe-1
                    i.fi-map-pin.mt-n1.me-1.align-middle.opacity-70
                    | 1.4 km from center

            // Place contacts
            .mb-3.pb-3.border-bottom
              h4.h5.mb-2 Contacts:
              ul.nav.row.row-cols-sm-2.row-cols-1.gy-1
                li.col
                  a(href='#').nav-link.p-0.fw-normal.d-flex.align-items-start
                    i.fi-map-pin.mt-1.me-2.align-middle.opacity-70
                    | Ollenhauer Str. 29, 10118, Berlin
                li.col
                  a(href='tel:3025550107').nav-link.d-inline-block.p-0.fw-normal.d-inline-flex.align-items-start
                    i.fi-phone.mt-1.me-2.align-middle.opacity-70
                    | (302) 555-0107
                  | , 
                  a(href='tel:3025550208').nav-link.d-inline-block.p-0.fw-normal
                    | (302) 555-0208
                li.col
                  a(href='#').nav-link.p-0.fw-normal.d-flex.align-items-start
                    i.fi-globe.mt-1.me-2.align-middle.opacity-60
                    | bb-hotel.com
                li.col
                  a(href='mailto:bb-hotel@example.com').nav-link.p-0.fw-normal.d-flex.align-items-start
                    i.fi-mail.mt-1.me-2.align-middle.opacity-70
                    | bb-hotel@example.com

            // Place pricing
            .mb-3.pb-3.border-bottom
              .row.row-cols-sm-2.row-cols-1
                .col.mb-sm-0.mb-3
                  h4.h5.mb-0
                    span.fs-4 $50-100&nbsp;
                    span.fs-base.fw-normal.text-body /night
                .col
                  a(href='#').btn.btn-primary.btn-lg.rounded-pill.w-sm-auto.w-100
                    | Book now
                    i.fi-chevron-right.fs-sm.ms-2

            // Follow
            .d-flex.align-items-center
              h4.h5.mb-0.me-3 Follow:
              .text-nowrap
                a(href='#').btn.btn-icon.btn-light-primary.btn-xs.shadow-sm.rounded-circle.me-2
                  i.fi-facebook
                a(href='#').btn.btn-icon.btn-light-primary.btn-xs.shadow-sm.rounded-circle.me-2
                  i.fi-instagram
                a(href='#').btn.btn-icon.btn-light-primary.btn-xs.shadow-sm.rounded-circle
                  i.fi-twitter

      // Location (Map)
      .col-md-5
        .position-relative.bg-size-cover.bg-position-center.bg-repeat-0.h-100.rounded-3(style='background-image: url(img/city-guide/single/map.jpg); min-height: 250px;')
          //- img(src='i' alt='Map').rounded-lg
          .d-flex.h-100.flex-column.align-items-center.justify-content-center
            img(src='img/city-guide/brands/hotel.svg' width='40' alt='Place logo').d-block.mx-auto.mb-4.rounded-circle.bg-white.shadow
            a(href='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2423.924340088787!2d13.428504251724927!3d52.58906113876177!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47a85284201593ab%3A0x28af69e02ce0e2fc!2sBusinesshotel%20Berlin!5e0!3m2!1sru!2sua!4v1618908622013!5m2!1sru!2sua' data-iframe='true' data-bs-toggle='lightbox').btn.btn-primary.rounded-pill.stretched-link
              i.fi-route.me-2
              | Get directions


  // Recently viewed
  section.container.pb-5.mb-lg-4
    .d-flex.align-items-center.justify-content-between.mb-4.pb-2
      h2.h3.mb-0 Recently viewed
      a(href='city-guide-catalog.html').btn.btn-link.fw-normal.ms-sm-3.p-0
