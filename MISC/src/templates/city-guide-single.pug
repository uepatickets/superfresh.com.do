extends partials/layout

//- Override default config variables
append config
  - var vendorStyles = ['lightgallery.js/dist/css/lightgallery.min.css', 'tiny-slider/dist/tiny-slider.css']
  - var vendorScripts = ['lightgallery.js/dist/js/lightgallery.min.js', 'lg-fullscreen.js/dist/lg-fullscreen.min.js', 'lg-zoom.js/dist/lg-zoom.min.js', 'lg-thumbnail.js/dist/lg-thumbnail.min.js', 'flatpickr/dist/flatpickr.min.js', 'tiny-slider/dist/min/tiny-slider.js', 'tiny-slider/dist/min/tiny-slider.js']
  - var parentMenu = 'Catalog'
  - var pageTitle = 'City Guide | Single Place - Gallery'

//- Navbar
block navbar
  include partials/navbar-city-guide

//- Page Content
block content

  // Page header
  section.container.pt-5.mt-5

    // Breadcrumb
    nav(aria-label='breadcrumb').mb-3.pt-md-3
      ol.breadcrumb
        li.breadcrumb-item
          a(href='city-guide-home-v1.html') Home
        li.breadcrumb-item
          a(href='city-guide-catalog.html') Find accommodation
        li(aria-current='page').breadcrumb-item.active
          | Berlin Business Hotel

    .d-sm-flex.align-items-center.justify-content-between.mb-4.pb-sm-2
      h1.h2.me-3.mb-sm-0 Berlin Business Hotel
      .text-nowrap
        button(type='button' data-bs-toggle='tooltip' title='Add to Wishlist').btn.btn-icon.btn-light-primary.btn-xs.shadow-sm.rounded-circle
          i.fi-heart
        .dropdown.d-inline-block(data-bs-toggle='tooltip' title='Share')
          button(type='button' data-bs-toggle='dropdown').btn.btn-icon.btn-light-primary.btn-xs.shadow-sm.rounded-circle.ms-2
            i.fi-share
          .dropdown-menu.dropdown-menu-end.my-1
            button(type='button').dropdown-item
              i.fi-facebook.fs-base.opacity-75.me-2
              | Facebook
            button(type='button').dropdown-item
              i.fi-twitter.fs-base.opacity-75.me-2
              | Twitter
            button(type='button').dropdown-item
              i.fi-instagram.fs-base.opacity-75.me-2
              | Instagram

    // Nav pills
    ul.nav.nav-pills.border-bottom.pb-3.mb-4
      li.nav-item
        a(href='city-guide-single.html').nav-link.d-flex.align-items-center.active
          i.fi-image.me-2
          | Gallery
      li.nav-item
        a(href='city-guide-single-info.html').nav-link.d-flex.align-items-center
          i.fi-info-circle.me-2
          | Info
      li.nav-item
        a(href='city-guide-single-reviews.html').nav-link.d-flex.align-items-center
          i.fi-edit.me-2
          | Reviews


  // Gallery
  section.container.overflow-auto.mb-5(data-simplebar)
    .row.g-2.g-md-3.gallery(data-thumbnails='true' style='min-width: 30rem;')
      .col-8
        a(href='img/city-guide/single/01.jpg' data-sub-html='<h6 class="fs-sm text-light">Kids bed</h6>').gallery-item.rounded.rounded-md-3
          img(src='img/city-guide/single/01.jpg' alt='Gallery thumbnail')
      .col-4
        a(href='img/city-guide/single/02.jpg' data-sub-html='<h6 class="fs-sm text-light">Kids bed</h6>').gallery-item.rounded.rounded-md-3.mb-2.mb-md-3
          img(src='img/city-guide/single/02.jpg' alt='Gallery thumbnail')
        a(href='img/city-guide/single/03.jpg' data-sub-html='<h6 class="fs-sm text-light">Working desk</h6>').gallery-item.rounded.rounded-md-3
          img(src='img/city-guide/single/03.jpg' alt='Gallery thumbnail')
      .col-12
        .row.g-2.g-md-3
          .col
            a(href='img/city-guide/single/04.jpg' data-sub-html='<h6 class="fs-sm text-light">Working desk</h6>').gallery-item.rounded-1.rounded-md-2
              img(src='img/city-guide/single/th04.jpg' alt='Gallery thumbnail')
          .col
            a(href='img/city-guide/single/05.jpg' data-sub-html='<h6 class="fs-sm text-light">King size bed</h6>').gallery-item.rounded-1.rounded-md-2
              img(src='img/city-guide/single/th05.jpg' alt='Gallery thumbnail')
          .col
            a(href='img/city-guide/single/06.jpg' data-sub-html='<h6 class="fs-sm text-light">Towels</h6>').gallery-item.rounded-1.rounded-md-2
              img(src='img/city-guide/single/th06.jpg' alt='Gallery thumbnail')
          .col
            a(href='img/city-guide/single/07.jpg' data-sub-html='<h6 class="fs-sm text-light">Bathroom</h6>').gallery-item.rounded-1.rounded-md-2
              img(src='img/city-guide/single/th07.jpg' alt='Gallery thumbnail')
          .col
            a(href='img/city-guide/single/08.jpg' data-sub-html='<h6 class="fs-sm text-light">Bathroom</h6>').gallery-item.more-item.rounded-1.rounded-md-2
              img(src='img/city-guide/single/th08.jpg' alt='Gallery thumbnail')
              span.gallery-item-caption.fs-base +5 <span class='d-none d-md-inline'>photos</span>


  // Page content
  section.container.pb-5.mb-md-4
    .row
      .col-md-7.mb-md-0.mb-3
        .card.py-2.px-sm-4.px-3.shadow-sm
          .card-body.mx-n2

            // Place info
            .d-flex.align-items-start.mb-3.pb-3.border-bottom
              img(src='img/city-guide/brands/hotel.svg' width='60' alt='Thumbnail')
              .ps-2.ms-1
