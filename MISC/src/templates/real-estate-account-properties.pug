extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Account'
  - var pageTitle = 'Real Estate | Account My Properties'

//- Navbar
block navbar
  include partials/navbar-real-estate

//- Page Content
block content
  .container.pt-5.pb-lg-4.mt-5.mb-sm-2

    // Breadcrumb
    nav(aria-label='Breadcrumb').mb-4.pt-md-3
      ol.breadcrumb
        li.breadcrumb-item
          a(href='real-estate-home.html') Home
        li.breadcrumb-item
          a(href='real-estate-account-info.html') Account
        li(aria-current='page').breadcrumb-item.active
          | My Properties
    

    // Page content
    .row

      // Sidebar
      aside.col-lg-4.col-md-5.pe-xl-4.mb-5
        include partials/sidebar-account-real-estate

      // Content
      .col-lg-8.col-md-7.mb-5
        .d-flex.align-items-center.justify-content-between.mb-3
          h1.h2.mb-0 My Properties
          a(href='#').fw-bold.text-decoration-none
            i.fi-trash.mt-n1.me-2
            | Delete all
        p.pt-1.mb-4 Here you can see your property offers and edit them easily.

        // Nav tabs
        ul(role='tablist').nav.nav-tabs.border-bottom.mb-4
          li.nav-item.mb-3
            a(href='#' role='tab' aria-selected='true').nav-link.active
              i.fi-file.fs-base.me-2
              | Published
          li.nav-item.mb-3
            a(href='#' role='tab' aria-selected='false').nav-link
              i.fi-file-clean.fs-base.me-2
              | Drafts
          li.nav-item.mb-3
            a(href='#' role='tab' aria-selected='false').nav-link
              i.fi-archive.fs-base.me-2
              | Archived
        
        // Item
