extends partials/layout

//- Override default config variables
append config
  - var vendorStyles = ['filepond-plugin-image-preview/dist/filepond-plugin-image-preview.min.css', 'filepond/dist/filepond.min.css']
  - var vendorScripts = ['filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.min.js', 'filepond-plugin-image-preview/dist/filepond-plugin-image-preview.min.js', 'filepond-plugin-image-crop/dist/filepond-plugin-image-crop.min.js', 'filepond-plugin-image-resize/dist/filepond-plugin-image-resize.min.js', 'filepond-plugin-image-transform/dist/filepond-plugin-image-transform.min.js', 'filepond/dist/filepond.min.js']
  - var parentMenu = 'Account'
  - var pageTitle = 'Car Finder | Account Personal Info'
  - var bodyClass = 'bg-dark'

//- Navbar
block navbar
  include partials/navbar-car-finder

//- Page Content
block content
  .container.pt-5.pb-lg-4.mt-5.mb-sm-2

    // Breadcrumb
    nav(aria-label='Breadcrumb').mb-4.pt-md-3
      ol.breadcrumb.breadcrumb-light
        li.breadcrumb-item
          a(href='car-finder-home.html') Home
        li.breadcrumb-item
          a(href='car-finder-account-info.html') Account
        li(aria-current='page').breadcrumb-item.active
          | Personal Info
    

    // Page content
    .row

      // Sidebar
      aside.col-lg-4.col-md-5.pe-xl-4.mb-5
        include partials/sidebar-account-car-finder

      // Content
      .col-lg-8.col-md-7.mb-5
        h1.h2.text-light Personal Info
        .text-light.mb-2.pt-1 Your personal info is 50% completed
        .progress.progress-light.mb-4(style='height: .25rem;')
          .progress-bar.bg-warning(role='progressbar' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
        .row.pt-2
          .col-lg-9.col-md-12.col-sm-8.mb-2.mb-m-4
            #personal-info.border.border-light.rounded-3.p-3.mb-4
              
              // Name
              .border-bottom.border-light.pb-3.mb-3
                .d-flex.align-items-center.justify-content-between
                  .pe-2.opacity-70
                    label.form-label.fw-bold.text-light Full name
                    #name-value.text-light Robert Fox
                  div(data-bs-toggle='tooltip' title='Edit').me-n3
                    a(href='#name-collapse' data-bs-toggle='collapse').nav-link.nav-link-light.py-0
                      i.fi-edit
                #name-collapse.collapse(data-bs-parent='#personal-info')
                  input(type='text' data-bs-binded-element='#name-value' data-bs-unset-value='Not specified' value='Robert Fox').form-control.form-control-light.mt-3
              
              // Gender
              .border-bottom.border-light.pb-3.mb-3
                .d-flex.align-items-center.justify-content-between
                  .pe-2.opacity-70
                    label.form-label.fw-bold.text-light Gender
                    #gender-value.text-light Not specified
                  div(data-bs-toggle='tooltip' title='Edit').me-n3
                    a(href='#gender-collapse' data-bs-toggle='collapse').nav-link.nav-link-light.py-0
                      i.fi-edit
                #gender-collapse.collapse(data-bs-parent='#personal-info')
                  select(data-bs-binded-element='#gender-value').form-select.form-select-light.mt-3
                    option(value='' disabled selected) Select your gender
                    option(value='Male') Male
                    option(value='Female') Female
                    
              // Email
              .border-bottom.border-light.pb-3.mb-3
                .d-flex.align-items-center.justify-content-between
                  .pe-2.opacity-70
                    label.form-label.fw-bold.text-light Email
                    #email-value.text-light robert_fox@email.com
                  div(data-bs-toggle='tooltip' title='Edit').me-n3
                    a(href='#email-collapse' data-bs-toggle='collapse').nav-link.nav-link-light.py-0
                      i.fi-edit
                #email-collapse.collapse(data-bs-parent='#personal-info')
                  input(type='email' data-bs-binded-element='#email-value' data-bs-unset-value='Not specified' value='robert_fox@email.com').form-control.form-control-light.mt-3
              
              // Phone number
              .border-bottom.border-light.pb-3.mb-3
                .d-flex.align-items-center.justify-content-between
                  .pe-2.opacity-70
                    label.form-label.fw-bold.text-light Phone number
                    #phone-value.text-light (302) 555-0107
                  div(data-bs-toggle='tooltip' title='Edit').me-n3
                    a(href='#phone-collapse' data-bs-toggle='collapse').nav-link.nav-link-light.py-0
                      i.fi-edit
                #phone-collapse.collapse(data-bs-parent='#personal-info')
                  input(type='text' data-bs-binded-element='#phone-value' data-bs-unset-value='Not specified' value='(302) 555-0107').form-control.form-control-light.mt-3
              
              // Address
              div
                .d-flex.align-items-center.justify-content-between
                  .pe-2.opacity-70
                    label.form-label.fw-bold.text-light Address
                    #address-value.text-light Not specified
                  div(data-bs-toggle='tooltip' title='Edit').me-n3
                    a(href='#address-collapse' data-bs-toggle='collapse').nav-link.nav-link-light.py-0
                      i.fi-edit
                #address-collapse.collapse(data-bs-parent='#personal-info')
                  input(type='text' data-bs-binded-element='#address-value' data-bs-unset-value='Not specified' placeholder='Enter address').form-control.form-control-light.mt-3
          .col-lg-3.col-md-12.col-sm-4.mb-4
            input(type='file' accept='image/png, image/jpeg' data-label-idle='<i class="d-inline-block fi-camera-plus fs-2 text-light text-muted mb-2"></i><br><span class="fw-bold text-light opacity-70">Change picture</span>' data-style-panel-layout='compact' data-image-preview-height='160' data-image-crop-aspect-ratio='1:1' data-image-resize-target-width='200' data-image-resize-target-height='200').file-uploader.border-light.bg-faded-light
            .pt-4.pb-2.py-lg-5
              h6.text-light.mb-2 Who can see my profile?
              p.fs-sm.text-light.opacity-70.mb-0 Your profile is private. No one else will see it untill a reservation is confirmed.


        // Action buttons
        .row
          .col-lg-9
            .d-flex.align-items-center.justify-content-between.pb-1
              button(type='button').btn.btn-primary Save changes
              button(type='button').btn.btn-link.btn-light.btn-sm.px-0
                i.fi-trash.me-2
                | Delete account


//- Footer
block footer
  include partials/footer-car-finder
